<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Tagid</th>
      <th>Cat</th>
      <th>Weight</th>
      <th>Description</th>
	<th colspan="2">Parent</th>
      <th>Purchase year</th>
      <th>Lifetime until</th>
      <th>Owner</th>
      <th>Last seen</th>
      <th>Service interval</th>
      <th>Lup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.tagid %></td>
        <td><%= item.category.acronym %>
	<%= item.sub_category.acronym %></td>
        <td><%= item.weight %> kg</td>
        <td><%= item.name_for_tree %></td>
	<td><%= item.parent ? item.parent.tagid + " " + item.parent.description : '---' %></td>
	<td><%= item.children ? item.subtree.sum(:weight) : '' %> kg</td>
        <td><%= item.purchased_at_date.year %></td>
        <td><%= item.lifetime_until %></td>
        <td><%= item.owner %></td>
        <td><%= item.last_seen %></td>
        <td><%= item.service_interval %></td>
        <td><%= item.lup %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Item', new_item_path %>
