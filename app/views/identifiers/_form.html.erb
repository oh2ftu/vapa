<%= simple_form_for @identifier, :html => { :class => 'form-horizontal' }, defaults: { input_html: {class: "form-control" } } do |f| %>
<div class="row">
 <div class="col-xs-12 col-md-4">
 <% if params[:presel].nil? %>
  <%= f.association :items, collection: Item.where(department_id: current_user.department_id), value_method: :id, 
   label_method: :tagid, input_html: { id: 'item-select5'}, :autofocus => true %>
 <% else %>
  <%= f.association :items, collection: Item.where(department_id: current_user.department_id), value_method: :id,
   label_method: :tagid, input_html: { id: 'item-select5'}, :autofocus => true, :selected => params[:presel]  %>
 <% end %>

  <%= error_span(@identifier[:items]) %>
 </div>
 <div class="col-xs-12 col-md-4">
  <%= f.input :name %>
  <%= error_span(@identifier[:name]) %>
  <%= f.input :barcode %>
  <%= error_span(@identifier[:barcode]) %>
 </div>
</div>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                identifiers_path, :class => 'btn btn-default' %>
<% end %>
