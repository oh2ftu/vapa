<%#= simple_form_for @item, :html => { :class => "form-horizontal" }, defaults: { input_html: {class: 'form-control has-feedback' } } do |f| %>
<%= form_tag update_multiple_items_path, method: :put do %>

  <ul>
  <% @items.each do |item| %>
    <li>
      <%= hidden_field_tag "item_ids[]", item.id %>
      <%= item.description %>
      <ul class="errors">
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
  </ul>
  <%= simple_fields_for :item do |f| %>
<div class="row">
<div class="col-lg-3">
      <%= f.input :make  %>
  <div class="control-group">
    <%= f.label :model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :model, :class => 'form-control' %>
    </div>
  </div>
<!-- Test starts -->
<%= f.label :category_id %><br />
<%= f.collection_select :category_id, Category.order("name"), :id, :name, include_blank: true %>
<%= f.input :sub_category_id, collection: @categories, as: :grouped_select, group_method: :sub_categories, include_blank: true %>
<!-- Test ends -->

  <div class="control-group">
      <%= f.input :description, :class => 'form-control' %>
  </div>
  <div class="control-group">
      <%= f.input :weight, :class => 'form-control' %>
  </div>
  <div class="control-group">
      <%= f.input :size, :class => 'form-control' %>
  </div>

</div>
<div class="col-lg-3">

  <div class="control-group">
      <%= f.collection_select :owner_id, Owner.order("name"), :id, :name, include_blank: true %>

  </div>

  <div class="control-group">
      <%= f.collection_select :vendor_id, Vendor.order("name"), :id, :name, include_blank: true %>
  </div>

  <div class="control-group">
    <%= f.label :purchased_at_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :purchased_at_date %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :into_use, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :into_use %>
    </div>
  </div>

  <div class="control-group">
      <%= f.input :warranty_time %>years
  </div>
  <div class="control-group">
      <%= f.input :life_time %>years
  </div>

  <div class="control-group">
      <%= f.input :price, :class => 'form-control' %>
  </div>

  <div class="control-group">
      <%= f.input :service_interval, :class => 'form-control' %>
  </div>
  <div class="control-group">
      <%= f.input :inspection_interval, :class => 'form-control' %>
  </div>

</div>
<div class="col-lg-3">

  <div class="control-group">
      <%= f.input :memo, :class => 'form-control' %>
  </div>
 <div class="control-group">
      <%= f.input :tag_list, :class => 'form-control' %>
  </div>
  <div class="control-group">
      <%= f.collection_select :status_id, Status.order("name"), :id, :name, include_blank: true %>

  </div>
  <div class="control-group">
      <%= f.collection_select :unit_id, Unit.order("name"), :id, :name, include_blank: true %>
  </div>
  <div class="control-group">
    <%= f.label :parent_id, :class => 'control-label' %>
    <div class="controls">
    <%#= f.collection_select :parent_id, Item.arrange_as_array({:order => 'description'}, @item.possible_parents) , :id, :name_for_selects, :include_blank => true %>
    </div>
  </div>
  <div class="control-group">
      <%= f.label :lup %><br />
      <%= f.select :lup, [["Yes", true], ["No", false]], include_blank: true %> 
     <%#= f.input_field :lup, as: :boolean, boolean_style: :inline  %> <%= f.label :lup, :class => 'control-label' %> service
  </div>

  <div class="control-group">
      <%= f.label :tagged %><br />
      <%= f.select :tagged, [["Yes", true], ["No", false]], include_blank: true %>  </div>
  <div class="control-group">
    <%= f.label :last_seen, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :last_seen %>
    </div>
  </div>

</div>
</div>
<br>
<% end %>
    <%= submit_tag "Update" %>

  <%#= f.submit nil, :class => 'btn btn-primary' %>
  <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
            items_path, :class => 'btn btn-default' %>

<% end %>
