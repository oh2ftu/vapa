<%- model_class = ServiceEvent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @service_event.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:show) %>:</strong></dt>
  <dd><%= @service_event.show %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              service_events_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_service_event_path(@service_event), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              service_event_path(@service_event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
