<%= simple_form_for @vendor, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@vendor[:name]) %>
  <%= f.input :address %>
  <%= error_span(@vendor[:address]) %>
  <%= f.input :city %>
  <%= error_span(@vendor[:city]) %>
  <%= f.input :contact %>
  <%= error_span(@vendor[:contact]) %>
  <%= f.input :phone %>
  <%= error_span(@vendor[:phone]) %>
  <%= f.input :email %>
  <%= error_span(@vendor[:email]) %>
  <%= f.input :notes %>
  <%= error_span(@vendor[:notes]) %>
  <%= f.input :billing %>
  <%= error_span(@vendor[:billing]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendors_path, :class => 'btn btn-default' %>
<% end %>
