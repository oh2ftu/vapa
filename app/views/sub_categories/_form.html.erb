<div class="col-xs-12 col-sm-6">
<%= simple_form_for @sub_category, :html => { :class => "form-horizontal sub_category" }, :defaults => { :input_html => {:class => "form-control" } } do |f| %>

    <% if @sub_category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sub_category.errors.count, "error") %> prohibited this sub_category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sub_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <%= f.input :acronym %>
    <%= error_span(@sub_category[:acronym]) %>
    <%= f.input :name %>
    <%= error_span(@sub_category[:name]) %>
    <%= f.association :category %>
    <%= error_span(@sub_category[:category_id]) %>
    <%= f.association :service_events, :input_html => { :id => "service-select1" } %>
    <%= error_span(@sub_category[:service_events]) %>
<br>	

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            sub_categories_path, :class => 'btn btn-default' %>

<% end %>
</div>
