<%- model_class = SubCategory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:acronym) %>:</strong></dt>
  <dd><%= @sub_category.acronym %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @sub_category.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= link_to @sub_category.category.try(:name), category_path(@sub_category.category) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_events) %>:</strong></dt>
  <dd>
   <% @sub_category.service_events.each do |sevent| %>
    <li><%= link_to sevent.name, service_event_path(sevent) %></li>
   <% end %>
  </dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sub_categories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sub_category_path(@sub_category), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sub_category_path(@sub_category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
